<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Carshow" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_carshow</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Carshow</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Carshow</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Carshow</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Carshow</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Carshow</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_carshow</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_carshow</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Carshow</item>
        
        
    </style>

    <style name="ActionBar.Solid.Carshow" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_carshow</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_carshow</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_carshow</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Carshow</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
    <style name="MyActionBarTitleText" parent="ActionBar.Solid.Carshow">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ActionBar.Transparent.Carshow" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_carshow</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Carshow</item>
    </style>

    <style name="PopupMenu.Carshow" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_carshow</item>	
    </style>

    <style name="DropDownListView.Carshow" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_carshow</item>
    </style>

    <style name="ActionBarTabStyle.Carshow" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_carshow</item>
    </style>

    <style name="DropDownNav.Carshow" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_carshow</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_carshow</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_carshow</item>
    </style>
    
    <style name="ProgressBar.Carshow" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_carshow</item>
    </style>
    
    <style name="ActionButton.CloseMode.Carshow" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_carshow</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Carshow.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Carshow</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Carshow</item>
    </style>

</resources>